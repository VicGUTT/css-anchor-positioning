{
  "name": "@oddbird/css-anchor-positioning",
  "version": "0.0.0-development",
  "description": "Polyfill for the proposed CSS anchor positioning spec",
  "license": "BSD-3-Clause",
  "publishConfig": {
    "access": "public"
  },
  "author": "OddBird <birds@oddbird.net> (oddbird.net)",
  "repository": {
    "type": "git",
    "url": "https://github.com/oddbird/css-anchor-positioning.git"
  },
  "bugs": "https://github.com/oddbird/css-anchor-positioning/issues",
  "homepage": "https://polyfill.oddbird.net",
  "keywords": [
    "css",
    "polyfill"
  ],
  "type": "module",
  "main": "./dist/css-anchor-positioning.umd.cjs",
  "module": "./dist/css-anchor-positioning.js",
  "exports": {
    ".": {
      "import": "./dist/css-anchor-positioning.js",
      "require": "./dist/css-anchor-positioning.umd.cjs"
    }
  },
  "files": [
    "README.md",
    "src/**/*.ts",
    "dist/css-anchor-positioning.iife.js",
    "dist/css-anchor-positioning.umd.cjs",
    "dist/css-anchor-positioning.js",
    "package.json"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "vite dev --port 3000",
    "tsc": "tsc",
    "format:css": "yarn lint:css --fix",
    "format:js": "prettier --write . && yarn eslint --fix . && yarn tsc",
    "format": "yarn format:css && yarn format:js",
    "lint:css": "stylelint '**/*.css'",
    "lint:js": "prettier --check . && yarn eslint . && yarn tsc",
    "lint": "yarn lint:css && yarn lint:js",
    "prepack": "yarn build",
    "serve": "yarn vite dev --port \"${PORT:-3000}\" -l \"${LEVEL:-info}\"",
    "test": "playwright test",
    "test:ci": "playwright test --browser=all"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.18.10",
    "@babel/preset-typescript": "^7.18.6",
    "@playwright/test": "^1.24.2",
    "@types/css-tree": "^1.0.7",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.4",
    "eslint-plugin-promise": "^6.0.0",
    "prettier": "^2.7.1",
    "stylelint": "^14.9.1",
    "stylelint-config-standard": "^26.0.0",
    "typescript": "^4.7.4",
    "vite": "^3.0.4"
  },
  "dependencies": {
    "css-tree": "^2.1.0"
  }
}
